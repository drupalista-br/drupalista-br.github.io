{
    "manifest_version": 3,
    "name": "Bót.online | Anti-bots",
    "description": "Intermedia a resolução de desafios anti robôs tais como o recaptcha e o hcaptcha.",
    "version": "0.1",
    "permissions": [
        "cookies",
        "tabs",
        "contextMenus",
        "notifications",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "Bót.online"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "author": {
        "name": "Francisco Luz",
        "email": "drupalista.com.br@gmail.com"
    }
}
